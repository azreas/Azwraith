<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>零云 - 登录</title>
  <link rel="icon" type="image/z-icon" href="/images/favicon.ico">
  <link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/login-top.css">
  <link rel="stylesheet" href="/stylesheets/login.css">
  <script type="text/javascript" src="/jquery/dist/jquery.min.js"></script>
  <script type="text/javascript" src="/stylesheets/layer/layer.js"></script>
  <script type="text/javascript" src="/bootstrap/dist/js/bootstrap.min.js"></script>
</head>
<body>
<div id="wrapper">
  <header>
    <nav id="main-nav" class="navbar navbar-default" role="navigation">
      <div class="container">
        <div class="row">
          <div class="navbar-header">
            <button type="button" class="toggle navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-top-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="/"><span class="logo"></span></a>
          </div>
          <div class="navbar-collapse navbar-top-collapse collapse" style="height: 1px;">
            <ul class="nav navbar-nav navbar-right c_navbar">

              <li><a href="/login" class="font_size login" id="llogin" style="padding:5px 15px">登 录</a></li>
              <li><a class="font_size registry" id="register" style="padding:5px 15px;cursor: pointer">注 册</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-left z_navbar">
              <li class="header-products"><a href="javascript:void(0);">服务中心</a>

              </li>
              <li class="header-solutions">
                <a href="javascript:void(0);" target="_block">社区</a>
              </li>
              <li><a href="javascript:void(0);">文档</a></li>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  </header>

  <form method="post" action="/login">
    <div class="form-login">
      <div class="form-group">
        <p class="signup-title">登陆</p>
      </div>
      <div class="form-group">
        <div class="username-input">
          <input id="username" type="text" name="username" placeholder="请输入邮箱">
        </div>
      </div>
      <div class="form-group">
        <div class="passwd-input">
          <input id="passwd" type="password" name="passwd" placeholder="请输入密码">
        </div>
      </div>
      <div class="form-group">
        <div class="signup-button">
          <input type="submit" id="submit" value="登 录">
          <input type="hidden">
        </div>
      </div>
      <div class="form-group">
        <a id="signup">注册新账户</a>
      </div>
    </div>
  </form>
  <input type="hidden" id="status" value="<%= status %>">
</div>

<script>
  (function(){
    //提交登录
    $('#submit').click(function () {
      var u = $('#username').val();
      var p = $('#passwd').val();
      if(u == '' || p == ''){
        return false;
      }
    });
    // 邮箱验证
    $('#username').blur(function (event) {
      var email = $(this).val();
      if (!email || email.trim() === '') {
        layer.tips('邮箱不能为空',$(this),{tips: [1, '#EF6578']});
        return;
      }
      email = email.trim();
      if (email.search(/^\w+((-\w+)|(\.\w+))*\@[A-Za-z0-9]+((\.|-)[A-Za-z0-9]+)*\.[A-Za-z0-9]+$/) !== -1) {
        if (email.length > 50) {
          // $(this).siblings('span.m').html('邮箱长度不能大于50');
          layer.tips('邮箱长度不能大于50',$(this),{tips: [1, '#EF6578']});
        }
        return;
      }
      layer.tips('请输入合法的邮箱',$(this),{tips: [1, '#EF6578']});
    });
    // 密码验证
    $('#passwd').blur(function(event) {
      var html = $(this).val();
      if(html===''){
        layer.tips('密码不能为空',$(this),{tips: [1, '#EF6578']});
      }else if(html.length < 6 || html.length > 30){
        layer.tips('密码长度必须在6-30位数',$(this),{tips: [1, '#EF6578']});
      }
    });
    //登录状态返回验证
    var status = $('#status').val();
//    console.log(status);
    if(status == '' || status == null){

    }else {
      layer.msg(status);
    }
    //期待更多
    $('.z_navbar li,#register,#signup').on('click',function(){
      layer.msg('更多功能敬请期待！', {icon: 6});
    });

  })();

</script>
</body>
</html>