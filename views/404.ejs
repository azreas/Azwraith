<script>
    (function () {
        //随机生成404
        var datas = [
            {'name': '404-1', 'background': '#96d6f7', 'describe': '您要的页面不存在'},
            {'name': '404-2', 'background': '#dcecfb', 'describe': '抱歉，您访问的页面不存在'},
