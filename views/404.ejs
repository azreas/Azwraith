            {'name': '404-6', 'background': '#f6f9fe', 'describe': '啊哦，网页出了点小错误......'}
        ];
        var number = Math.floor(Math.random() * datas.length);
        var data = datas[number];
        $('.wrapper').css('background-color', data.background);
        $('.contents img').attr('src', '/images/' + data.name + '.png');
        $('.detail').text(data.describe);
        //期待更多
        $('.content-navbar li.mmore').on('click', function () {
            layer.msg('更多功能敬请期待！', {icon: 6});
        });

        //判断是否登录
        $.ajax({
            url: '/user',
            post: 'get'
        }).done(function (resp) {
            console.log(resp);
            if (resp.result == true) {
                $('li.header-actions').show();
                var avatarname = resp.people.profile.avatarname;
                if (avatarname == undefined) {
                    $('img.user-icon').attr('src', '/images/user-avatar.png');
                } else {
                    $('img.user-icon').attr('src', '/upload/' + avatarname);
                }
            } else if (resp.result == false) {
                $('li.header-actions').siblings().show();
            }
        });
    })();
</script>
